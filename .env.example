# ==========================================
# SELLERAI PRO - ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!

# ==========================================
# APPLICATION
# ==========================================
VITE_APP_NAME=SellerAI Pro
VITE_APP_URL=https://selai.vercel.app

# ==========================================
# SUPABASE
# ==========================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# ==========================================
# VERCEL KV (Redis)
# ==========================================
# Auto-configured by Vercel, but you can set manually:
# KV_REST_API_URL=your_kv_rest_api_url
# KV_REST_API_TOKEN=your_kv_rest_api_token

# ==========================================
# ADMIN
# ==========================================
# Comma-separated list of admin emails
VITE_ADMIN_EMAILS=admin@sellerai.com,owner@sellerai.com

# ==========================================
# CLAUDE AI (Optional - has fallback)
# ==========================================
# Get API key from: https://console.anthropic.com/
# VITE_ANTHROPIC_API_KEY=your_anthropic_api_key

# ==========================================
# FEATURES FLAGS (Optional)
# ==========================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPORT=true

# ==========================================
# DEVELOPMENT
# ==========================================
VITE_DEV_MODE=false
VITE_LOG_LEVEL=info
