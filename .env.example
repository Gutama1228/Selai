# ===============================================
# SUPABASE - Auth & Users Database
# ===============================================
# Setup: https://supabase.com
# Free Tier: 500MB database, 50K monthly active users
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ===============================================
# VERCEL KV - Products & Orders (Redis)
# ===============================================
# Setup: Vercel Dashboard > Storage > KV
# Free Tier: 256MB, 30M requests/month
KV_REST_API_URL=https://your-kv.vercel-storage.com
KV_REST_API_TOKEN=your-kv-token-here

# ===============================================
# VERCEL POSTGRES - Analytics & Logs
# ===============================================
# Setup: Vercel Dashboard > Storage > Postgres
# Free Tier: 256MB, 60 hours compute/month
POSTGRES_URL=postgres://user:pass@host/db
POSTGRES_PRISMA_URL=postgres://user:pass@host/db?pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://user:pass@host/db

# ===============================================
# MONGODB ATLAS - Content & Settings
# ===============================================
# Setup: https://www.mongodb.com/cloud/atlas
# Free Tier: 512MB storage
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/sellerai
MONGODB_DB_NAME=sellerai_content

# ===============================================
# CLAUDE AI - AI Features
# ===============================================
# Setup: https://console.anthropic.com
VITE_CLAUDE_API_KEY=sk-ant-api-key-here
VITE_CLAUDE_MODEL=claude-sonnet-4-20250514

# ===============================================
# STRIPE - Payment Processing
# ===============================================
# Setup: https://stripe.com
# Use test keys for development
VITE_STRIPE_PUBLIC_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Pricing IDs (from Stripe Dashboard)
STRIPE_PRICE_STARTER=price_starter_id
STRIPE_PRICE_PROFESSIONAL=price_pro_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_id

# ===============================================
# APPLICATION SETTINGS
# ===============================================
VITE_APP_NAME=SellerAI Pro
VITE_APP_URL=https://sellerai.pro
VITE_APP_ENV=production

# Admin Configuration (Comma separated emails)
VITE_ADMIN_EMAILS=admin@sellerai.com,owner@sellerai.com

# ===============================================
# FEATURE FLAGS
# ===============================================
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_IMAGE_GEN=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# ===============================================
# EMAIL SERVICE (Optional)
# ===============================================
# For password reset, notifications, etc.
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@sellerai.pro

# ===============================================
# ANALYTICS (Optional)
# ===============================================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=XXXXXXX

# ===============================================
# SOCIAL MEDIA
# ===============================================
VITE_TWITTER_URL=https://twitter.com/selleraipro
VITE_FACEBOOK_URL=https://facebook.com/selleraipro
VITE_INSTAGRAM_URL=https://instagram.com/selleraipro

# ===============================================
# SUPPORT
# ===============================================
VITE_SUPPORT_EMAIL=support@sellerai.pro
VITE_SUPPORT_PHONE=+62-XXX-XXXX-XXXX
VITE_SUPPORT_WHATSAPP=https://wa.me/62XXXXXXXXXX
